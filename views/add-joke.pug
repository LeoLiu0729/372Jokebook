doctype html
html
  head
    title Add a New Joke
  body
    h1 Add a New Joke
    form(action="/jokebook/add-joke" method="POST")
      label(for="category") Category:
      input(type="text" name="category" required)
      br
      label(for="setup") Setup:
      input(type="text" name="setup" required)
      br
      label(for="delivery") Delivery:
      input(type="text" name="delivery" required)
      br
      button(type="submit") Add Joke
    a(href="/") Back to Home
